<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotificationWithXamarinForms.MainPage">

    <StackLayout>
        <Label Text="Title of notication"
              FontSize="22"
              TextColor="Black"
              HorizontalOptions="CenterAndExpand"
              VerticalOptions="CenterAndExpand"/>
        <Entry FontSize="22"
               Text="Title here"
               TextColor="Black"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="StartAndExpand"
               x:Name="entry_title"/>
        <Label Text="Text of notication"
              FontSize="22"
              TextColor="Black"
              HorizontalOptions="CenterAndExpand"
              VerticalOptions="StartAndExpand"/>
        <Entry FontSize="22"
               Text="Notication text here"
               TextColor="Black"
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="StartAndExpand"
               x:Name="entry_text"/>
        <Button Text="Send Notification"
                FontSize="18"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="StartAndExpand"/>
    </StackLayout>

</ContentPage>
